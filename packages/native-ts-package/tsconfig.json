{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es5",
    "noEmit": false,
    "isolatedModules": false,
    "declaration": false,
    "sourceMap": false
  },
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/index.ts"
  ],
  "include": ["src"]
}
